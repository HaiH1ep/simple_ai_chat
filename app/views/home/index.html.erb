<div class="mx-auto mt-28 px-5 flex">
  <div class="flex justify-center bg-gray-100 mx-auto">
    <div class="bg-white p-8 rounded-lg shadow-lg w-full">
      <h1 class="text-2xl font-bold mb-6 text-center text-gray-700">Upload Your Connections CSV File</h1>
      <form
        id="csv-form"
        data-controller="csv-upload"
        data-csv-upload-target="form"
        class="space-y-6"
      >
        <div>
          <label for="csv-file" class="block text-sm font-medium text-gray-700">Please use file with header provided from LinkedIn</label>
          <input type="file" id="csv-file" name="csv_file" accept=".csv" data-action="change->csv-upload#upload" class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
        </div>
        <div id="csv-preview" class="mt-4 hidden p-4 bg-gray-50 rounded-md shadow-inner">
          <p class="text-gray-600">File selected: <span id="file-name" class="font-bold"></span></p>
        </div>
        <div>
          <button type="submit" class="w-full inline-flex items-center justify-center px-4 py-2 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            Upload
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
