<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Linkedin connections" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Linkedin connections</h1>
    <%= link_to "New linkedin connection", new_linkedin_connection_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="linkedin_connections" class="min-w-full">
    <% @linkedin_connections.each do |linkedin_connection| %>
      <%= render linkedin_connection %>
      <p>
        <%= link_to "Show this linkedin connection", linkedin_connection, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
